div#panel-mission
  .panel.panel-primary
    .panel-heading
      h3.panel-title Misje
    .panel-body
      #missions.panel-group(role='tablist', aria-multiselectable='true')
        .panel.panel-default
          #mission-one.panel-heading(role='tab')
            h4.panel-title
              a(role='button', data-toggle='collapse', data-parent='#missions', href='#mission-one-collapse', aria-expanded='true', aria-controls='mission-one-collapse')= mission_name
          #mission-one-collapse.panel-collapse.collapse.in(role='tabpanel', aria-labelledby='mission-one')
            .panel-body
              .row
                .col-sm-12
                  p= mission_description
              .row
                .col-sm-8
                  p Siła &nbsp;
                .col-sm-4
                  span.badge= mission_strength
              .row
                .col-sm-8
                  p Witalność &nbsp;
                .col-sm-4
                  span.badge= mission_vitality
              .row
                .col-sm-8
                  p Inteligencja &nbsp;
                .col-sm-4
                  span.badge= mission_inteligence
              .row
                .col-sm-8
                  p Zreczność &nbsp;
                .col-sm-4
                  span.badge= mission_agility
              .row
                .col-sm-8
                  p Pieniądze &nbsp;
                .col-sm-4
                  span.badge= mission_money
              .row
                .col-sm-8
                  p Przedmiot &nbsp;
                .col-sm-4
                  span.badge= mission_item
              .row
                .col-sm-8
                  p Czas &nbsp;
                .col-sm-4
                  span.badge= mission_time
