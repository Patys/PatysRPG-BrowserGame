#missions.panel-group(role='tablist', aria-multiselectable='false')
  .panel.panel-default
    #mission-one.panel-heading(role='tab')
      h4.panel-title
        a(role='button', data-toggle='collapse', data-parent='#missions', href='#mission-one-collapse', aria-expanded='true', aria-controls='mission-one-collapse')= game_data.mission_name
    #mission-one-collapse.panel-collapse.collapse.in(role='tabpanel', aria-labelledby='mission-one')
      .panel-body
        .row
          .col-sm-12
            p= game_data.mission_description
        .row
          .col-sm-4
            .row
              .col-sm-8
                p Pieniądze &nbsp;
              .col-sm-4
                span.badge= game_data.mission_money
          .col-sm-8
            img(src="http://i.imgur.com/jF755L9.jpg")


