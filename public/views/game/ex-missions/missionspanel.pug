#missions.panel-group(role='tablist', aria-multiselectable='false')
  .panel.panel-default
    #mission-one.panel-heading(role='tab')
      h4.panel-title
        a(role='button', data-toggle='collapse', data-parent='#missions', href='#mission-one-collapse', aria-expanded='true', aria-controls='mission-one-collapse')= game_data.mission_name
    #mission-one-collapse.panel-collapse.collapse.in(role='tabpanel', aria-labelledby='mission-one')
      .panel-body
        .row
          .col-sm-4
            .row
              .col-sm-12
                p= game_data.mission_description
            .row
              .col-sm-8
                p Pieniądze &nbsp;
              .col-sm-4
                span.badge.lead= game_data.mission_money
            .row
              .col-sm-8
                p Czas &nbsp;
              .col-sm-4
                span.badge= game_data.mission_time
            .row
              .col-sm-12
                form(action='/mission/start', method="post")
                  input(value=game_data.mission_id, hidden, name="mission_id")
                  input.btn.btn-default(type="submit", value="Rozpocznij")

          .col-sm-8
            img(src="http://i.imgur.com/eHA2FPC.jpg").img-responsive


