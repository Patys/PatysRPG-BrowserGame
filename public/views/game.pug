html
  head
    include link.pug
    | <style type="text/css">
    include ../game.css
    | </style>
  body
    .container
      .jumbotron
        h1.title PatysRPG
    .container
      .row
        .col-sm-2
          .menu
            button.btn.btn-large.btn-primary.btn-block#menu-character Postać
            button.btn.btn-large.btn-primary.btn-block#menu-mission Misje
            button.btn.btn-large.btn-primary.btn-block#menu-shop Sklep
            button.btn.btn-large.btn-primary.btn-block#menu-arena Arena
            button.btn.btn-large.btn-primary.btn-block#menu-ranking Ranking
            button.btn.btn-large.btn-primary.btn-block#menu-messages
              | Wiadomości &nbsp;
              span.badge 3
            button.btn.btn-large.btn-primary.btn-block#menu-group Grupa
            a(href="/logout" style="margin-top: 35px;").btn.btn-large.btn-info.btn-block#menu-logout Wyloguj
        .col-sm-10
          if(currentUrl === '/character')
            include game/character.pug
          if(currentUrl === '/missions')
            include game/missions.pug
          if(currentUrl === '/shop')
            include game/shop.pug
          if(currentUrl === '/arena')
            include game/arena.pug
          if(currentUrl === '/ranking')
            include game/ranking.pug
          if(currentUrl === '/messages')
            include game/messages.pug
          if(currentUrl === '/group')
            include game/group.pug
    footer.footer
      p(style="text-align: center;").text-muted Patryk "patys_prog" Szczygło &copy; 2016
    include scripts.pug
    | <script>
    include ../game.js
    | </script>
